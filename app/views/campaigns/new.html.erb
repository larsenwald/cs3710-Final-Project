<h1>New Campaign</h1>
<%= form_with(model: @campaign, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :setting %>
    <%= form.text_field :setting %>
  </div>

  <div>
    <%= form.label :active %>
    <%= form.check_box :active %>
  </div>

  <%= form.submit 'Create Campaign' %>
<% end %>
