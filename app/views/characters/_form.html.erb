<%= form_with(model: [@campaign, @character], local: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :character_class %>
    <%= form.text_field :character_class, class: "form-control" %>
  </div>

  <div>
    <%= form.label :level %>
    <%= form.number_field :level, class: "form-control" %>
  </div>

  <div>
    <%= form.label :backstory %>
    <%= form.text_area :backstory, class: "form-control" %>
  </div>

  <%= form.submit "Create Character", class: "btn btn-primary" %>
<% end %>
